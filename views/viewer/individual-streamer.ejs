    <body id="page-top">
        <%- include('partials/navbar.ejs') %>
        <div id="wrapper">
            <!-- Sidebar -->
            <ul class="sidebar navbar-nav">
                <li class="nav-item active">
                   <a class="nav-link" href="/">
                   <i class="fas fa-fw fa-home"></i>
                   <span>Home</span>
